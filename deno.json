{
	"compilerOptions": {
		"checkJs": true,
		"erasableSyntaxOnly": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [
			"deno.ns",
			"deno.window",
			"deno.worker",
			"dom",
			"dom.iterable",
			"dom.asynciterable"
		],
		"types": [
			"./types/array.extension.d.ts"
		]
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.13",
		"three": "https://esm.sh/three",
		"vite": "npm:vite@^6.3.4"
	},
	"exclude": [],
	"lint": {
		"include": [
			"src/",
			"tests/"
		],
		"exclude": [],
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"ban-untagged-todo",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"guard-for-in",
				"no-await-in-loop",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-implicit-declare-namespace-export",
				"no-inferrable-types",
				"no-non-null-asserted-optional-chain",
				"no-non-null-assertion",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-top-level-await",
				"no-undef",
				"prefer-ascii",
				"triple-slash-reference",
				"verbatim-module-syntax"
			]
		}
	},
	"fmt": {
		"exclude": [],
		"useTabs": true,
		"semiColons": true,
		"proseWrap": "preserve",
		"quoteProps": "asNeeded"
	},
	"tasks": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview"
	},
	"license": "MIT",
	"name": "@kawabaud/easel",
	"version": "0.0.1",
	"exports": {
		".": "./src/mod.ts",
		"./types/*": "./types/*"
	}
}