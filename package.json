{
    "name": "easel",
    "version": "0.1.0",
    "description": "TypeScript 3D library",
    "private": true,
    "type": "module",
    "main": "./dist/index.umd.js",
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        },
        "./src/*": "./src/*"
    },
    "files": [
        "dist",
        "src",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "directories": {
        "tests": "tests"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run",
        "format": "biome format ./src"
    },
    "keywords": [
        "easel",
        "easel.ts",
        "typescript",
        "3d",
        "canvas",
        "svg",
        "html5"
    ],
    "author": {
        "name": "KawaBaud"
    },
    "publisher": "KawaBaud",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/KawaBaud/easel.js.git"
    },
    "bugs": {
        "url": "https://github.com/KawaBaud/easel.js/issues"
    },
    "homepage": "https://github.com/KawaBaud/easel.js",
    "readme": "README.md",
    "devDependencies": {
        "@biomejs/biome": "2.0.6",
        "@types/bun": "^1.2.17",
        "@types/three": "^0.169.0",
        "@vitest/ui": "^3.2.4",
        "jsdom": "^26.1.0",
        "three": "^0.178.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.3",
        "vitest": "^3.2.4"
    },
    "trustedDependencies": [
        "@biomejs/biome"
    ]
}
